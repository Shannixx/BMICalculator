<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:BMICalculator.ViewModels"
    x:Class="BMICalculator.Views.MainPage"
    BackgroundColor="#F8FAFC">

    <VerticalStackLayout Spacing="18" Padding="20" VerticalOptions="FillAndExpand">

        <!-- Header -->
        <Frame Padding="18" HasShadow="True" BackgroundColor="#E0F2FE" CornerRadius="18">
            <VerticalStackLayout>
                <Label Text="BMI Calculator Maui" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       TextColor="#2563EB"
                       HorizontalOptions="Center" />
                <Label Text="Quickly estimate your body mass index"
                       FontSize="13"
                       TextColor="#475569"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Gender Section -->
        <Frame BackgroundColor="#FFFFFF" CornerRadius="18" Padding="16" HasShadow="True">
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16" VerticalOptions="Center">
                <Image Source="{Binding GenderImageSource}" 
                       WidthRequest="72" 
                       HeightRequest="72"
                       HorizontalOptions="Start" />

                <VerticalStackLayout Grid.Column="1" Spacing="10" VerticalOptions="CenterAndExpand">
                    <Label Text="Gender" 
                           TextColor="#64748B" 
                           FontSize="13"
                           HorizontalOptions="Start" />

                    <HorizontalStackLayout Spacing="10">
                        <!-- Male Button -->
                        <Button Text="Male"
                                Command="{Binding SetGenderCommand}"
                                CommandParameter="Male"
                                WidthRequest="110"
                                CornerRadius="12"
                                FontSize="14"
                                TextColor="#0B1220">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding Gender}" Value="Male">
                                    <Setter Property="BackgroundColor" Value="#93C5FD" />
                                    <Setter Property="TextColor" Value="#0B1220" />
                                </DataTrigger>
                                <DataTrigger TargetType="Button" Binding="{Binding Gender}" Value="Female">
                                    <Setter Property="BackgroundColor" Value="#E2E8F0" />
                                    <Setter Property="TextColor" Value="#475569" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>

                        <!-- Female Button -->
                        <Button Text="Female"
                                Command="{Binding SetGenderCommand}"
                                CommandParameter="Female"
                                WidthRequest="110"
                                CornerRadius="12"
                                FontSize="14"
                                TextColor="#0B1220">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding Gender}" Value="Female">
                                    <Setter Property="BackgroundColor" Value="#93C5FD" />
                                    <Setter Property="TextColor" Value="#0B1220" />
                                </DataTrigger>
                                <DataTrigger TargetType="Button" Binding="{Binding Gender}" Value="Male">
                                    <Setter Property="BackgroundColor" Value="#E2E8F0" />
                                    <Setter Property="TextColor" Value="#475569" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <!-- Inputs Section -->
        <Frame BackgroundColor="#FFFFFF" CornerRadius="18" Padding="16" HasShadow="True">
            <VerticalStackLayout Spacing="12">
                <Label Text="Age" TextColor="#475569" FontSize="13" />
                <Entry Placeholder="32"
                       Keyboard="Numeric"
                       Text="{Binding Age}"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#0F172A"
                       PlaceholderColor="#94A3B8"
                       MaxLength="3"
                       HeightRequest="40"/>

                <BoxView HeightRequest="1" Color="#E2E8F0" />

                <Label Text="Height (cm)" TextColor="#475569" FontSize="13" />
                <Entry Placeholder="179"
                       Keyboard="Numeric"
                       Text="{Binding HeightCm}"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#0F172A"
                       PlaceholderColor="#94A3B8"
                       HeightRequest="40"/>

                <BoxView HeightRequest="1" Color="#E2E8F0" />

                <Label Text="Weight (kg)" TextColor="#475569" FontSize="13" />
                <Entry Placeholder="75"
                       Keyboard="Numeric"
                       Text="{Binding Weight}"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#0F172A"
                       PlaceholderColor="#94A3B8"
                       HeightRequest="40"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Calculate Button -->
        <Button Text="Calculate BMI"
                Command="{Binding CalculateCommand}"
                CornerRadius="12"
                FontSize="18"
                FontAttributes="Bold"
                HeightRequest="52"
                Margin="0,6,0,0"
                BackgroundColor="#2563EB"
                TextColor="#FFFFFF"/>

    </VerticalStackLayout>
</ContentPage>
